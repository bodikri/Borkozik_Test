<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panelContent"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none"
    android:background="#88FFFFFF" >

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="1">

        <Button
            android:text="@string/buttonEP"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/emer_button" />

        <Button
            android:text="@string/buttonNP"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/norm_button" />
<!--
        <ImageButton
            android:id="@+id/zoomin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/zoom_in" />

        <ImageButton
            android:id="@+id/zoomout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/zoom_out" />
-->
        <ImageButton
            android:id="@+id/northUp"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:background="@null"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:src="@drawable/compass_needle_north_blue" />

        <ImageButton
            android:id="@+id/nextmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/arrow_right" />

        <ImageButton
            android:id="@+id/prevmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/arrow_left" />

        <ImageButton
            android:id="@+id/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/globe" />

        <ImageButton
            android:id="@+id/waypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/flag" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/info" />

        <ImageButton
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/cursor_drag_arrow" />

        <ImageButton
            android:id="@+id/locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/pin_map" />

        <ImageButton
            android:id="@+id/tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/doc_edit" />

        <ImageButton
            android:id="@+id/expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/expand" />

        <Button
            android:text="@string/buttonZeroLevel"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/zero_button" />
        <Button
            android:text="@string/buttonClear"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:id="@+id/clear_button" />

    </LinearLayout>

</ScrollView>